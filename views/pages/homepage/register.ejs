<%- include('../../template/header-login-register.ejs') %> 
<section class="section">
  <div class="container mt-5">
    <div class="row">
      <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
        <div class="login-brand">
          <a href="index.html"><img src="public/img/logo.svg" alt="logo" width="200"></a>
        </div>

        <div class="card card-primary">
          <div class="card-header" style="font-size: 16px;"><h4>Register</h4></div>

          <div class="card-body">
            <form method="POST">
              <div class="row">
                <div class="form-group col-6">
                  <label for="first_name" style="font-size: 16px;">First Name</label>
                  <input style="font-size: 16px;" id="first_name" type="text" class="form-control" name="first_name" autofocus>
                </div>
                <div class="form-group col-6">
                  <label for="last_name" style="font-size: 16px;">Last Name</label>
                  <input style="font-size: 16px;" id="last_name" type="text" class="form-control" name="last_name">
                </div>
              </div>
              
              <div class="form-group">
                <label for="username" style="font-size: 16px;">Username</label>
                <input style="font-size: 16px;" id="username" type="text" class="form-control" name="email">
              </div>

              <div class="form-group">
                <label for="email" style="font-size: 16px;">Email</label>
                <input style="font-size: 16px;" id="email" type="email" class="form-control" name="email">
                <div class="invalid-feedback">
                </div>
              </div>

              <div class="row">
                <div class="form-group col-6">
                  <label for="password" class="d-block" style="font-size: 16px;">Password</label>
                  <input style="font-size: 16px;" id="password" type="password" class="form-control pwstrength" data-indicator="pwindicator" name="password">
                  <div id="pwindicator" class="pwindicator">
                    <div class="bar"></div>
                    <div class="label"></div>
                  </div>
                </div>
                <div class="form-group col-6">
                  <label for="password2" class="d-block" style="font-size: 16px;">Password Confirmation</label>
                  <input style="font-size: 16px;" id="password2" type="password" class="form-control" name="password-confirm">
                </div>
              </div>

              <div class="form-group">
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" name="artist" class="custom-control-input" id="artist">
                  <label class="custom-control-label" for="artist" style="font-size: 16px;">Register as artist</label>
                </div>
              </div>

              <div class="form-group">
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" name="agree" class="custom-control-input" id="agree">
                  <label class="custom-control-label" for="agree" style="font-size: 16px;">I agree with the terms and conditions</label>
                </div>
              </div>

              <div class="form-group">
                <button id="register-button" type="button" class="btn btn-primary btn-lg btn-block" style="font-size: 16px;">
                  Register
                </button>
              </div>
            </form>
            <p id="warning-message"></p>
          </div>
        </div>
        <div class="simple-footer">
          Copyright Â© 2021 sketsa.id. All rights reserved
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('../../template/footer-login-register') %> 